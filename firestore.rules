rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Only allow access if user knows the Group ID
    match /groups/{groupId} {
      allow read: if true;
      allow create: if request.resource.data.keys().hasAll(['id', 'name', 'members', 'createdAt']);
      allow update: if true; 
      
      match /expenses/{expenseId} {
        allow read, write: if true;
      }
    }
  }
}
